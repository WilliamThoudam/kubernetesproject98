{
  "scripts": {
    "build": "browserify -e assets/js/index.js | uglifyjs -c -m -o assets/js/bundle.min.js",
    "watch": "watchify -e assets/js/index.js -o assets/js/bundle.min.js --delay 1500"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@peepso/prettier-config": "^1.0.3",
    "@wordpress/browserslist-config": "^2.7.0",
    "babelify": "^10.0.0",
    "browserify": "^17.0.0",
    "browserify-shim": "^3.8.14",
    "prettier": "^2.1.2",
    "uglify-js": "^3.11.5",
    "watchify": "^3.11.1"
  },
  "browserify": {
    "transform": [
      "babelify",
      "browserify-shim"
    ]
  },
  "browserify-shim": {
    "jquery": "global:jQuery",
    "underscore": "global:_",
    "peepso": "global:peepso",
    "peepsodata": "global:peepsodata"
  },
  "prettier": "@peepso/prettier-config"
}
